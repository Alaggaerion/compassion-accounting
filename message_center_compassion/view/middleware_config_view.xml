<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_mysql_config" model="ir.ui.view">
            <field name="name">MySQL Settings</field>
            <field name="model">mysql.config.settings</field>
            <field name="arch" type="xml">
                <form string="MySQL Connector" version="7.0" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="MySQL Connector"/>
                    <group>
                        <field name="default_mysql_host"/>
                        <field name="default_mysql_db"/>
                        <field name="default_mysql_user"/>
                        <field name="default_mysql_pw" password="True"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="action_mysql_form" model="ir.actions.act_window">
            <field name="name">Mysql Settings</field>
            <field name="res_model">mysql.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
        
        
        <menuitem action="action_mysql_form" id="menu_mysql_form" parent="base.menu_config" name="MySQL Connector" sequence="10" />
    </data>
</openerp>