<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="True">

        <!--
        Resource: gmc.action
        -->
        
        <!-- 
            Constituent Messages 
        -->
        <record id="gmc_action_create_constituent" model="gmc.action">
            <field name="name">CreateConstituent</field>
            <field name="direction">out</field>
            <field name="model">res.partner</field>
            <field name="type">create</field>
            <field name="description">Will tell GMC the creation of a new partner.</field>
        </record>
        <record id="gmc_action_create_email" model="gmc.action">
            <field name="name">CreateEmail</field>
            <field name="direction">out</field>
            <field name="model">res.partner</field>
            <field name="type">create</field>
            <field name="description">Will send to GMC the e-mail address of a partner.</field>
        </record>
        <record id="gmc_action_update_constituent" model="gmc.action">
            <field name="name">UpdateConstituent</field>
            <field name="direction">out</field>
            <field name="model">res.partner</field>
            <field name="type">update</field>
            <field name="description">Will tell GMC the modification of a partner's name.</field>
        </record>
        <record id="gmc_action_update_constituent" model="gmc.action">
            <field name="name">UpsertConstituent</field>
            <field name="direction">out</field>
            <field name="model">res.partner</field>
            <field name="type">upsert</field>
            <field name="description">Will send to GMC the information of a partner.</field>
        </record>
        <record id="gmc_action_update_email" model="gmc.action">
            <field name="name">UpdateEmail</field>
            <field name="direction">out</field>
            <field name="model">res.partner</field>
            <field name="type">update</field>
            <field name="description">Will send to GMC the e-mail address of a partner.</field>
        </record>
        
        <!--
            Child Messages
        -->
        <record id="gmc_action_allocate_child" model="gmc.action">
            <field name="name">AllocateChild</field>
            <field name="direction">in</field>
            <field name="model">compassion.child</field>
            <field name="type">allocate</field>
            <field name="description">Will create a new child in the database and retrieve all its information.</field>
        </record>
        <record id="gmc_action_deallocate_child" model="gmc.action">
            <field name="name">DeallocateChild</field>
            <field name="direction">in</field>
            <field name="model">compassion.child</field>
            <field name="type">deallocate</field>
            <field name="description">
                Will terminate any contract existing with the child and set the child to unavailable status.
                Be careful to inform the sponsor
                Be careful to remove the child from internet if present.
            </field>
        </record>
        <record id="gmc_action_update_child" model="gmc.action">
            <field name="name">UpdateChild</field>
            <field name="direction">in</field>
            <field name="model">compassion.child</field>
            <field name="type">update</field>
            <field name="description">Will update the description of a child.</field>
        </record>
        <record id="gmc_action_update_project" model="gmc.action">
            <field name="name">UpdateProject</field>
            <field name="direction">in</field>
            <field name="model">compassion.project</field>
            <field name="type">update</field>
            <field name="description">Will update the status and description of a project.</field>
        </record>
        <record id="gmc_action_depart_child" model="gmc.action">
            <field name="name">DepartChild</field>
            <field name="direction">in</field>
            <field name="model">compassion.child</field>
            <field name="type">depart</field>
            <field name="description">
                Will terminate any contract existing with the child and set the child to unavailable status.
                Be careful to inform the sponsor
                Be careful to remove the child from internet if present.
            </field>
        </record>
        
        <!--
            Constituent-Child Relationship Messages
        -->
        <record id="gmc_action_create_commitment" model="gmc.action">
            <field name="name">CreateCommitment</field>
            <field name="direction">out</field>
            <field name="model">simple.recurring.contract</field>
            <field name="type">create</field>
            <field name="description">Will inform GMC of a new sponsorship.</field>
        </record>
        <record id="gmc_action_cancel_commitment" model="gmc.action">
            <field name="name">CancelCommitment</field>
            <field name="direction">out</field>
            <field name="model">simple.recurring.contract</field>
            <field name="type">cancel</field>
            <field name="description">Will inform GMC that a sponsorship has been cancelled.</field>
        </record>
        <record id="gmc_action_create_gift" model="gmc.action">
            <field name="name">CreateGift</field>
            <field name="direction">out</field>
            <field name="model">account.invoice.line</field>
            <field name="type">create</field>
            <field name="description">Will inform GMC of a Gift that a sponsor made.</field>
        </record>
    </data>
</openerp>
