<?xml version="1.0"?>
<openerp>
<data>
<!-- Add analytics_id in contracts invoice lines -->
	<record id="account_analytic_account_recurring_distribution_form" model="ir.ui.view">
		<field name="name">account.analytic.account.invoice.recurring.form.inherit</field>
		<field name="model">account.analytic.account</field>
		<field name="inherit_id" ref="account_analytic_analysis_recurring.account_analytic_account_recurring_form_form"/>
		<field eval="40" name="priority"/>
		<field name="arch" type="xml">
			<field name='uom_id' position='after'>
				<field name="analytics_id"/>
			</field>
		</field>
	</record>
	
<!-- Test pour affichage de la reference dans les factures -->
	<record id="invoice_reference_form" model="ir.ui.view">
		<field name="name">account.invoice.reference.form</field>
		<field name="model">account.invoice</field>
		<field name="inherit_id" ref="account.invoice_form" />
		<field name="arch" type="xml">
			<field name='fiscal_position' position='after'>
				<field name='reference' />
			</field>
		</field>
	</record>
</data>
</openerp>
