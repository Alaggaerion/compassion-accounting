<odoo>
<data noupdate="1">
	<record id="attribution_cron" model="ir.cron">
		<field name="name">Perform Analytic Distribution</field>
		<field name="user_id" ref="base.user_root"/>
		<field name="interval_number">12</field>
		<field name="interval_type">months</field>
		<field name="numbercall">-1</field> <!-- don't limit the number of calls -->
		<field name="model" eval="'account.analytic.attribution'"/>
		<field name="function" eval="'perform_distribution'" />
		<field name="args" eval="()"/>
	</record>
</data>
</odoo>
